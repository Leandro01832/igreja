<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicativoXamarin.Views.GeolocationView"
             BackgroundColor="{StaticResource FontColor}"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             xmlns:maps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
             Title="Geolocalização"
             >
    <StackLayout>
        <StackLayout Orientation="Horizontal">
        <Label Text="Geolocalização das celulas"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

        <ActivityIndicator IsRunning="{Binding Aguarde}">
        </ActivityIndicator>

        </StackLayout>

        <maps:Map   x:Name="MyMap" WidthRequest="300" HeightRequest="400" IsShowingUser="true" MapType="Hybrid">
        </maps:Map>


    </StackLayout>
</ContentPage>