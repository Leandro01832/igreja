@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-12">
        <h2>Seja bem vindo!!!</h2>
        <p>
            <b>Site da igreja</b>
        </p>
        <div style="margin:auto;">
            <img src="http://www.clickfamilia.org.br/oikos2015/wp-content/uploads/2019/07/what-is-family-ministry-lead-300x225.jpg" />
        </div>

        <div class="jumbotron text-center">
            @Html.ActionLink("Meu perfil", "Perfil")
        </div>
    </div>
    <div class="col-md-12">
        @{
            if (ViewBag.mensagem != "")
            {
                <center>
                    <h3><b>@ViewBag.mensagem</b></h3>
                </center>
            }
        }

    </div>
</div>