@model business.classes.Abstrato.Pessoa

@{
    ViewBag.Title = "Perfil";
    string texto = "";
    if (ViewBag.perfil == "PessoaLgpd")
    { texto = "Editar perfil para dados completos"; }
    else
    { texto = "Editar perfil para perfil Lgpd"; }
}

<h2>Perfil - @ViewBag.perfil - @Html.ActionLink(texto, "Editar", new { id = Model.IdPessoa })</h2>

<h4>@Model.NomePessoa</h4>

<div class="row">

    <div class="jumbotron glyphicon-share col-xs-3">
        <img src="@Model.Img" width="150" class="img-responsive img-rounded" />
    </div>

    <div class="jumbotron glyphicon-share col-xs-6">

        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdPessoa)
            @Html.HiddenFor(model => model.Codigo)
            @Html.HiddenFor(model => model.Email)
            @Html.HiddenFor(model => model.FiguraFile)
            <div class="form-horizontal">
                <h4>Imagem</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Imagem", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <span class="btn btn-default btn-file">
                            <input type="file" name="FiguraFile" id="FiguraFile" />

                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Enviar imagem" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>

    <div class="jumbotron glyphicon-share col-xs-3">
        <p>Codigo ID: @Model.Codigo</p>
        <p>Codigo ID da Celula: @Model.celula_</p>

    </div>

</div>

<br />


<div class="row">



    <div class="jumbotron glyphicon-share col-xs-6" style="height:auto;">
        <p> Ministérios do usuario @Model.Email </p>
        @foreach (var minis in Model.Ministerios)
        {
            <p> Codigo ID do ministério: @minis.Ministerio.IdMinisterio</p>
            <p> Nome do ministério: @minis.Ministerio.Nome </p>
            <p> Propósito do ministério: @minis.Ministerio.Proposito </p>
        }


    </div>


    <div class="jumbotron glyphicon-share col-xs-6" style="height:auto;">
        <p> Reuniões do usuario @Model.Email </p>
        @foreach (var reu in Model.Reuniao.Where(r => r.Reuniao.Data_reuniao >= DateTime.Now))
        {
            <p> Codigo ID da reunião: @reu.Reuniao.IdReuniao</p>
            <p> Local da reunião: @reu.Reuniao.Local_reuniao </p>
            <p> Data da reunião: @reu.Reuniao.Data_reuniao </p>
            <p> Horário de início da reunião: @reu.Reuniao.Horario_inicio </p>
            <p> Horário final da reunião: @reu.Reuniao.Horario_fim </p>
        }
    </div>




    <div class="jumbotron glyphicon-share col-xs-2" style="height:auto;">
        @Html.ActionLink("Voltar para a Home", "Index")
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
