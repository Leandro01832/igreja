@model IEnumerable<business.classes.Reuniao>

@{
    ViewBag.Title = "Reunioes";
}

<h2>Reuniões</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Data_reuniao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Horario_inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Horario_fim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Local_reuniao)
        </th>
        <th></th>
    </tr>

    @Html.AntiForgeryToken()

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data_reuniao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario_inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario_fim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Local_reuniao)
            </td>
            <td>
                @Html.ActionLink("Detalhes da reunião", "Details", "Reuniao", new { id = item.IdReuniao }, null) |
                @using (Html.BeginForm("ParticiparReuniao", "Home", new { Id = item.IdReuniao }, FormMethod.Post, null))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Participar" class="btn btn-default" />
                        </div>
                    </div>
                }
            </td>
        </tr>
    }

</table>
