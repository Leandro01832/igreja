@model IEnumerable<business.classes.Historico>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Data_inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Falta)
        </th>

        <th>
            <label>Data final</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Data_inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Falta)
        </td>
        <td>
           @item.Data_inicio.AddDays(60)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.historicoid }) |
            @Html.ActionLink("Details", "Details", new { id=item.historicoid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.historicoid })
        </td>
    </tr>
}

</table>
