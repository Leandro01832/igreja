<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PIB</title>

    <link rel="stylesheet" href="~/Styles/carousel.css" />
  
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")        
</head> 



<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-next"></span>
                    <span class="icon-next"></span>
                    <span class="icon-next"></span>
                </button>
                <a href="#" class="navbar-brand img-responsive"><img src="~/figura/logo.png" width="50" /> </a>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse" id="navbarsite">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">PIB</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Meu Perfil", "Perfil", "Home")</li>
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Celula", "Index", "Celula")</li>
                                <li>@Html.ActionLink("Criança", "Index", "Crianca")</li>
                                <li>@Html.ActionLink("Visitante", "Index", "Visitante")</li>
                                <li>@Html.ActionLink("Membro por batismo", "Index", "Membro_Batismo")</li>
                                <li>@Html.ActionLink("Membro por transferência", "Index", "Membro_Transferencia")</li>
                                <li>@Html.ActionLink("Membro por aclamação", "Index", "Membro_Aclamacao")</li>
                                <li>@Html.ActionLink("Membro por reconciliação", "Index", "Membro_Reconciliacao")</li>
                                <li>@Html.ActionLink("Ministérios", "Index", "Ministerio")</li>
                                <li>@Html.ActionLink("Lider", "Index", "Cargo_Lider")</li>
                                <li>@Html.ActionLink("Lider em treinamento", "Index", "Cargo_Lider_Treinamento")</li>
                                <li>@Html.ActionLink("Supervisor", "Index", "Cargo_Supervisor")</li>
                                <li>@Html.ActionLink("Supervisor em treinamento", "Index", "Cargo_Supervisor_Treinamento")</li>
                                <li>@Html.ActionLink("Usuarios", "Index", "Users")</li>
                            </ul>
                        </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Vlibras</a>
                        <ul class="dropdown-menu">
                            <li><a href="http://www.vlibras.gov.br/">Conheça o Vlibras</a></li>
                            <li><a href="https://play.google.com/store/apps/details?id=com.lavid.vlibrasdroid">Download para Android</a></li>
                            <li><a href="https://itunes.apple.com/br/app/vlibras/id1039641615?mt=8">Download para iOS</a></li>
                            <li><a href="http://vlibras.gov.br/vlibras_instalador_5.1.0.exe">Download para Windows (Versão 7 ou superior)</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home")</li>

                </ul>    

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <br />
       
        <footer>
            <div class="col-lg-12">
                <p>&copy; @DateTime.Now.Year - PIB Cataguases</p>
            </div>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>  
</html>





