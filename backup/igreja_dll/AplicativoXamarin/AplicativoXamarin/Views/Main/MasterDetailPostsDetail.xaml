<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicativoXamarin.Views.Main.MasterDetailPostsDetail"
             Title="Postagens">
  <StackLayout Padding="10" Spacing="10">
    <Label FontSize="24" Text="Digite o nome da pagina" HorizontalOptions="Center" />
        <Entry FontSize="18" Text="{Binding Pesquisa}"></Entry>
        <Button HorizontalOptions="Center" Command="{Binding PesquisarCommand}"></Button>
  </StackLayout>
</ContentPage>